<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CalendarTheme" parent="Base.Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTimePickerWidgetStyle" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="MyDatePickerWidgetStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="MyCalendarStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:theme">@style/CalendarTheme</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">true</item>
        <item name="android:spinnersShown">false</item>
    </style>
</resources>